<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>객관식 퀴즈</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #673AB7;
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 5px;
        }

        .quiz-title {
            text-align: center;
            font-size: 24px;
            margin: 20px 0;
            padding-top: 20px;
        }

        .quiz-content {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin: 20px auto;
            max-width: 800px;
            text-align: center;
        }

        .quiz-media {
            margin-bottom: 20px;
        }

        .quiz-media img {
            max-width: 100%;
            height: auto;
        }

        .quiz-text {
            color: #333;
            font-size: 18px;
            margin-bottom: 20px;
        }

        .options-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }

        .option-button {
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            background-color: white;
            color: #333;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            text-align: left;
            position: relative;
        }

        .option-button:hover:not(.submitted) {
            background-color: #f0f0f0;
            border-color: #673AB7;
        }

        .option-button.correct {
            border-color: #4CAF50 !important;
            background-color: #E8F5E9;
        }

        .option-button.incorrect {
            border-color: #f44336 !important;
            background-color: #FFEBEE;
        }

        .result-message {
            margin: 20px 0;
            padding: 15px;
            border-radius: 8px;
            font-size: 18px;
            display: none;
        }

        .result-message.correct {
            background-color: #E8F5E9;
            color: #2E7D32;
        }

        .result-message.incorrect {
            background-color: #FFEBEE;
            color: #C62828;
        }

        .next-button {
            display: none;
            margin: 20px auto 0;
            padding: 12px 30px;
            background-color: #673AB7;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .next-button:hover {
            background-color: #5E35B1;
        }

        .submitted .option-button {
            cursor: default;
            pointer-events: none;
        }

        .question-counter {
            position: absolute;
            top: 20px;
            right: 20px;
            color: white;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <a href="/quiz" class="back-button">돌아가기</a>
    <div class="question-counter">문제 <%= currentQuestion %> / <%= totalQuestions %></div>

    <div class="quiz-title">객관식 퀴즈</div>

    <div class="quiz-content">
        <div class="quiz-media">
            <img src="<%= questionImage %>" alt="퀴즈 이미지" class="img-fluid">
        </div>
        <div class="quiz-text">
            <%= questionText %>
        </div>
        <div class="options-container">
            <% if (options && options.length > 0) { %>
                <% options.forEach(function(option) { %>
                    <button class="option-button" data-option-id="<%= option.id %>">
                        <%= option.option_text %>
                    </button>
                <% }); %>
            <% } else { %>
                <div style="color: #333; margin-top: 20px;">선택지가 없습니다.</div>
            <% } %>
        </div>
        <div class="result-message"></div>
        <button class="next-button">다음 문제</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const optionButtons = document.querySelectorAll('.option-button');
            const resultMessage = document.querySelector('.result-message');
            const nextButton = document.querySelector('.next-button');
            const optionsContainer = document.querySelector('.options-container');
            let isSubmitted = false;

            optionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    if (isSubmitted) return;
                    
                    const optionId = this.dataset.optionId;
                    submitAnswer(optionId);
                });
            });

            function submitAnswer(selectedOptionId) {
                if (isSubmitted) return;

                fetch('/quiz/submit', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        answer: selectedOptionId,
                        questionType: '<%= questionType %>'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    isSubmitted = true;
                    showResult(data, selectedOptionId);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }

            function showResult(result, selectedOptionId) {
                const selectedButton = document.querySelector(`[data-option-id="${selectedOptionId}"]`);
                const correctButton = document.querySelector(`[data-option-id="${result.correctAnswer}"]`);

                optionsContainer.classList.add('submitted');

                if (result.isCorrect) {
                    selectedButton.classList.add('correct');
                    resultMessage.textContent = '정답입니다!';
                    resultMessage.classList.add('correct');
                } else {
                    selectedButton.classList.add('incorrect');
                    correctButton.classList.add('correct');
                    resultMessage.textContent = '틀렸습니다. 다시 한 번 확인해보세요.';
                    resultMessage.classList.add('incorrect');
                }

                resultMessage.style.display = 'block';
                nextButton.style.display = 'block';
            }

            nextButton.addEventListener('click', function() {
                const currentQuestion = parseInt('<%= currentQuestion %>');
                const totalQuestions = parseInt('<%= totalQuestions %>');
                const quizId = parseInt('<%= quizId %>');
                
                if (currentQuestion >= totalQuestions) {
                    window.location.href = '/quiz/final-result';
                } else {
                    window.location.href = `/quiz/play/${quizId}?count=${totalQuestions}`;
                }
            });
        });
    </script>
</body>
</html> 