                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="section-card pending-quiz-section">
            <h2 class="mb-4">관리자 페이지</h2>
            <h4>승인 대기 퀴즈</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>제목</th><th>카테고리</th><th>신청자</th><th>승인/거절</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (pendingQuizzes && pendingQuizzes.length > 0) { %>
                            <% pendingQuizzes.forEach((quiz) => { %>
                            <tr>
                                <td>
                                    <a href="#" class="quiz-title-link" data-bs-toggle="modal" data-bs-target="#quizModal" 
                                       data-quiz-id="<%= quiz.id %>" data-quiz-title="<%= quiz.title %>" 
                                       data-quiz-category="<%= quiz.category %>" data-quiz-description="<%= quiz.description %>"
                                       data-quiz-questions='<%= JSON.stringify(quiz.questions).replace(/'/g, "&#39;") %>'>
                                        <%= quiz.title %>
                                    </a>
                                </td>
                                <td><%= quiz.category %></td>
                                <td><%= quiz.username %></td>
                                <td>
                                    <form action="/admin/approve" method="POST" style="display:inline;">
                                        <input type="hidden" name="idx" value="<%= quiz.id %>">
                                        <button class="btn btn-success btn-sm">
                                            <i class="bi bi-check-lg"></i> 승인
                                        </button>
                                    </form>
                                    <form action="/admin/reject" method="POST" style="display:inline;">
                                        <input type="hidden" name="idx" value="<%= quiz.id %>">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="bi bi-x-lg"></i> 거절
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4" class="text-center">대기 중인 퀴즈가 없습니다.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="section-card users-section">
            <h4>모든 유저 정보</h4>
            <form action="/admin" method="GET" class="search-form">
                <input type="text" name="userSearchId" class="form-control" placeholder="유저 ID 검색" value="<%= userSearchId || '' %>">
                <input type="text" name="userSearchName" class="form-control" placeholder="유저 이름 검색" value="<%= userSearchName || '' %>">
                <input type="hidden" name="quizPage" value="<%= quizPagination.currentPage %>">
                <input type="hidden" name="userPage" value="1">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> 검색
                </button>
                <a href="/admin?userPage=1&quizPage=<%= quizPagination.currentPage %>" class="btn btn-secondary">
                    <i class="bi bi-arrow-counterclockwise"></i> 초기화
                </a>
            </form>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr><th>ID</th><th>이름</th><th>이메일</th><th>권한</th></tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.role %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% for(let i = 1; i <= userPagination.totalPages; i++) { %>
                            <li class="page-item <%= i === userPagination.currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?userPage=<%= i %>&quizPage=<%= quizPagination.currentPage %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="section-card quizzes-section">
            <h4>모든 퀴즈 정보</h4>
            <form action="/admin" method="GET" class="search-form">
                <input type="text" name="quizSearchId" class="form-control" placeholder="퀴즈 ID 검색" value="<%= quizSearchId || '' %>">
                <input type="text" name="quizSearchTitle" class="form-control" placeholder="퀴즈 제목 검색" value="<%= quizSearchTitle || '' %>">
                <input type="hidden" name="userPage" value="<%= userPagination.currentPage %>">
                <input type="hidden" name="quizPage" value="1">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> 검색
                </button>
                <a href="/admin?userPage=<%= userPagination.currentPage %>&quizPage=1" class="btn btn-secondary">
                    <i class="bi bi-arrow-counterclockwise"></i> 초기화
                </a>
            </form>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr><th>ID</th><th>제목</th><th>카테고리</th><th>퀴즈정보</th></tr>
                    </thead>
                    <tbody>
                        <% quizzes.forEach(quiz => {
                            // Ensure quiz object is not null or undefined
                            if (!quiz) return;
                        %>
                            <tr>
                                <td><%= quiz.id %></td>
                                <td><%= quiz.title %></td>
                                <td><%= quiz.category %></td>
                                <td>
                                    <a href="#" class="view-quiz-link" data-bs-toggle="modal" data-bs-target="#quizModal" data-quiz-id="<%= quiz.id %>">
                                        문제보기
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% for(let i = 1; i <= quizPagination.totalPages; i++) { %>
                            <li class="page-item <%= i === quizPagination.currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?userPage=<%= userPagination.currentPage %>&quizPage=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="section-card notice-section">
            <h4>공지사항 작성</h4>
            <% if (successMessage) { %>
                <div class="alert alert-success" role="alert">
                    <%= successMessage %>
                </div>
            <% } %>
            <form action="/admin/notice" method="POST">
                <div class="mb-3">
                    <label class="form-label">제목</label>
                    <input type="text" class="form-control" name="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">내용</label>
                    <textarea class="form-control" name="content" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">공지 등록</button>
            </form>
        </div>
    </div>

    <!-- 퀴즈 상세 정보 모달 -->
    <div class="modal fade" id="quizModal" tabindex="-1" aria-labelledby="quizModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="quizModalLabel">퀴즈 상세 정보</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <h6>제목</h6>
                        <p id="modalQuizTitle"></p>
                    </div>
                    <div class="mb-3">
                        <h6>카테고리</h6>
                        <p id="modalQuizCategory"></p>
                    </div>
                    <div class="mb-3">
                        <h6>설명</h6>
                        <p id="modalQuizDescription"></p>
                    </div>
                    <div class="mb-3">
                        <h6>문제 목록</h6>
                        <div id="modalQuizQuestions"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const quizModal = document.getElementById('quizModal');
        const pendingQuizTitleLinks = document.querySelectorAll('.quiz-title-link');
        const viewQuizLinks = document.querySelectorAll('.view-quiz-link'); // 모든 퀴즈 정보 링크
        
        // 승인 대기 퀴즈 링크 클릭 이벤트 (기존 로직 유지)
        pendingQuizTitleLinks.forEach(link => {
            link.addEventListener('click', function() {
                const quizId = this.dataset.quizId;
                const quizTitle = this.dataset.quizTitle;
                const quizCategory = this.dataset.quizCategory; // data-quiz-category 대신 data-category 사용 가정
                const quizDescription = this.dataset.quizDescription;
                let quizQuestions;
                
                try {
                    // 이미 JSON.stringify로 인코딩된 데이터 사용
                    quizQuestions = JSON.parse(this.dataset.quizQuestions);
                    console.log('대기 퀴즈 데이터:', quizQuestions); // 디버깅용 로그
                } catch (e) {
                    console.error('대기 퀴즈 데이터 파싱 오류:', e);
                    quizQuestions = [];
                }
                
                document.getElementById('modalQuizTitle').textContent = quizTitle;
                document.getElementById('modalQuizCategory').textContent = quizCategory;
                document.getElementById('modalQuizDescription').textContent = quizDescription;
                
                const questionsContainer = document.getElementById('modalQuizQuestions');
                questionsContainer.innerHTML = '';
                
                if (Array.isArray(quizQuestions)) {
                    quizQuestions.forEach((question, index) => {
                        if (!question) return;
                        
                        const questionDiv = document.createElement('div');
                        questionDiv.className = 'mb-3 p-3 border rounded';
                        
                        let questionHtml = `<h6>문제 ${index + 1}</h6>`;
                        questionHtml += `<p class="mb-3">${question.text || question.question || ''}</p>`; // text 또는 question 필드 사용
                         // 문제 이미지 표시
                        if (question.question_img_url) {
                             questionHtml += `<img src="${question.question_img_url}" alt="문제 이미지" style="max-width: 100%; height: auto; margin-bottom: 10px;">`;
                        }

                        if (question.option1 || (question.options && question.options.length > 0)) { // 객관식
                            questionHtml += '<div class="options">';
                            const options = question.options || [
                                { num: 1, text: question.option1 },
                                { num: 2, text: question.option2 },
                                { num: 3, text: question.option3 },
                                { num: 4, text: question.option4 }
                            ];
                            
                            options.forEach(opt => {
                                // 대기 퀴즈는 correct가 숫자 인덱스, 승인 퀴즈는 is_correct 플래그나 option_order 사용 가능
                                // 여기서는 일단 대기 퀴즈의 correct 기준
                                const isCorrect = parseInt(question.correct) === opt.num;
                                questionHtml += `
                                    <div class="option mb-2 ${isCorrect ? 'text-success fw-bold' : ''}">
                                        ${opt.num}. ${opt.text || ''}
                                        ${isCorrect ? ' ✓' : ''}
                                    </div>`;
                            });
                            questionHtml += '</div>';
                        } else if (question.answer || question.correct_answer) { // 주관식
                            const answerText = question.answer || question.correct_answer || '';
                            questionHtml += `
                                <div class="answer">
                                    <strong>정답:</strong> 
                                    <span class="text-success fw-bold">${answerText}</span>
                                </div>`;
                        }
                        
                        questionDiv.innerHTML = questionHtml;
                        questionsContainer.appendChild(questionDiv);
                    });
                } else {
                    questionsContainer.innerHTML = '<p class="text-danger">문제 데이터를 불러올 수 없습니다.</p>';
                }
            });
        });

        // 모든 퀴즈 정보 링크 클릭 이벤트 (새로 추가)
        viewQuizLinks.forEach(link => {
            link.addEventListener('click', async function(event) {
                event.preventDefault(); // 기본 링크 동작 방지
                const quizId = this.dataset.quizId;

                try {
                    const response = await fetch(`/admin/quizzes/${quizId}`);
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    const quizData = await response.json();
                    console.log('모든 퀴즈 상세 데이터:', quizData); // 디버깅용 로그

                    // 모달에 데이터 채우기
                    document.getElementById('modalQuizTitle').textContent = quizData.title;
                    document.getElementById('modalQuizCategory').textContent = quizData.category;
                    document.getElementById('modalQuizDescription').textContent = quizData.description;

                    const questionsContainer = document.getElementById('modalQuizQuestions');
                    questionsContainer.innerHTML = ''; // 기존 내용 초기화

                    if (Array.isArray(quizData.questions)) {
                        quizData.questions.forEach((question, index) => {
                            const questionDiv = document.createElement('div');
                            questionDiv.className = 'mb-3 p-3 border rounded';

                            let questionHtml = `<h6>문제 ${index + 1}</h6>`;
                            questionHtml += `<p class="mb-3">${question.text || ''}</p>`;
                             // 문제 이미지 표시
                            if (question.question_img_url) {
                                 questionHtml += `<img src="${question.question_img_url}" alt="문제 이미지" style="max-width: 100%; height: auto; margin-bottom: 10px;">`;
                            }

                            if (question.question_type === 'multiple_choice' && question.options) { // 객관식
                                questionHtml += '<div class="options">';
                                question.options.forEach(opt => {
                                    // 승인 퀴즈 데이터에서는 correct 속성에 option_order가 저장되어 있음
                                    const isCorrect = parseInt(question.correct) === opt.num;
                                    questionHtml += `
                                        <div class="option mb-2 ${isCorrect ? 'text-success fw-bold' : ''}">
                                            ${opt.num}. ${opt.text || ''}
                                            ${isCorrect ? ' ✓' : ''}
                                        </div>`;
                                });
                                questionHtml += '</div>';
                            } else if (question.question_type === 'short_answer') { // 주관식
                                questionHtml += `
                                    <div class="answer">
                                        <strong>정답:</strong> 
                                        <span class="text-success fw-bold">${question.answer || ''}</span>
                                    </div>`;
                            }

                            questionDiv.innerHTML = questionHtml;
                            questionsContainer.appendChild(questionDiv);
                        });
                    } else {
                        questionsContainer.innerHTML = '<p class="text-danger">문제 데이터를 불러올 수 없습니다.</p>';
                    }

                    // 모달 열기
                    const modal = new bootstrap.Modal(quizModal);
                    modal.show();

                } catch (error) {
                    console.error('Error fetching quiz details:', error);
                    // 오류 발생 시 사용자에게 알림 등을 제공할 수 있습니다.
                    alert('퀴즈 상세 정보를 불러오는데 실패했습니다.');
                }
            });
        });

         // 모달이 닫힐 때 내용 초기화 (선택 사항)
         quizModal.addEventListener('hidden.bs.modal', function () {
             document.getElementById('modalQuizTitle').textContent = '';
             document.getElementById('modalQuizCategory').textContent = '';
             document.getElementById('modalQuizDescription').textContent = '';
             document.getElementById('modalQuizQuestions').innerHTML = '';

             // 모달 배경 및 body 클래스 강제 제거 (문제 해결 시도)
             const backdrops = document.getElementsByClassName('modal-backdrop');
             while(backdrops.length > 0){
